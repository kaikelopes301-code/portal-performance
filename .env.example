# ============================================
# Portal Performance - Variáveis de Ambiente
# ============================================
# Copie este arquivo para .env e preencha os valores

# === DATABASE ===
DATABASE_URL=sqlite:///./faturamento.db

# === SENDGRID (Email) ===
# Obtenha em: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.sua-chave-aqui
SENDGRID_FROM_EMAIL=consultoria@atlasinovacoes.com.br
SENDGRID_FROM_NAME=Atlas Inovações | Operações

# === SEGURANÇA ===
# Gere com: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=sua-chave-secreta-32-caracteres
PORTAL_API_KEY=sua-api-key-para-integracao

# === CORS ===
# URL do frontend em produção (separar múltiplas por vírgula)
ALLOWED_ORIGINS=https://seu-frontend.vercel.app,http://localhost:5173

# === LIMPEZA AUTOMÁTICA ===
HTML_RETENTION_DAYS=30
JOB_RETENTION_DAYS=90

# === AMBIENTE ===
# development | production
ENVIRONMENT=development
